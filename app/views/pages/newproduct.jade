extends ../layout

block content
	.container(style="margin-bottom: 50px;")
		.row
			form.form-horizontal(method="post", action="/product/save", enctype="multipart/form-data")
				.form-group
					label.col-sm-2.control-label(for="inputProductname") 商品名字
					.col-sm-10
						input#inputProductname.form-control(type="text", name="product[productname]", value=product.productname)
				.form-group
					label.col-sm-2.control-label(for="inputType") 类型
					.col-sm-10
						input#inputType.form-control(type="text", name="product[type]", value=product.type)
				.form-group
					label.col-sm-2.control-label(for="inputNum") 数量
					.col-sm-10
						input#inputNum.form-control(type="text", name="product[num]", value=product.num)
				.form-group
					label.col-sm-2.control-label(for="uploadPoster") 图片上传
					.col-sm-10
						input#inputImg.form-control(type="hidden", name="product[img]", value=product.img)
						input#uploadPoster(type="file", name="uploadPoster")
				.form-group
					label.col-sm-2.control-label(for="inputDesc") 描述
					.col-sm-10
						textarea#inputDesc.form-control(name="product[description]", value=product.description, row="3")
				.form-group
					label.col-sm-2.control-label(for="inputDate") 有效日期
					.col-sm-10
						.col-sm-4
							input#inputDate.form-control(type="date", name="product[datefrom]", value=product.datefrom)
						.col-sm-1(style="text-align: center;font-size: 18px;") ----
						.col-sm-4
							input#inputDate.form-control(type="date", name="product[dateto]", value=product.dateto)
				input(type="hidden", name="product[owner]", value="#{user.name}")
				input(type="hidden", name="product[id]", value="#{product.id}")
				.form-group
					.col-sm-offset-2.col-sm-10
					button.btn.btn-default(type="submit") 录入
	//script(src="/js/admin.js")